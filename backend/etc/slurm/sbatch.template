#!/bin/bash

#SBATCH --job-name={jobname}
#SBATCH --chdir={cwd}
#SBATCH --time=01:00:00
#SBATCH --ntasks=1
#SBATCH --output={out}
#SBATCH --error={err}
#SBATCH --partition=cpu
#SBATCH --propagate

{cmd}

if [ -z "$ORCHESTRATION_URL" ]; then
    echo "Finishing process {process_dir}..."
    curl -X GET "$ORCHESTRATION_URL/processes/finish?process_dir={process_dir}"
    echo "Done!"
fi
